<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listar Posts</title>
</head>
<body>

  <h1>Lista de Posts</h1>

  <ul>
    <% posts.forEach(post => { %>
      <li>
        <h2><a href="/blog/post/<%= post.id %>"><%= post.title %></a></h2>
        <p>Autor: <%= post.author %></p>
        <p>Data: <%= moment(post.created_at).format('DD/MM/YYYY') %></p>
      </li>
    <% }) %>
  </ul>

</body>
</html>
